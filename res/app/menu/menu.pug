.navbar.stf-menu(ng-controller='MenuCtrl')
  .container-fluid.stf-top-bar
    a.stf-logo(ng-href='/#!/devices') STF
    ul.nav.stf-nav.unselectable(nav-menu='current')
      li(ng-cloak='ng-cloak')
        a(ng-href='/#!/control/{{lastUsedDevice}}', ng-show='lastUsedDevice')
          span.fa.fa-mobile
          span(ng-if='!$root.basicMode', translate='translate') Control
        a(ng-href='/#!/devices', accesskey='1')
          span.fa.fa-sitemap
          span(ng-if='!$root.basicMode', translate='translate') Devices
        a(ng-href='/#!/settings')
          span.fa.fa-gears
          span(ng-if='!$root.basicMode', translate='translate') Settings
        a(ng-href='/#!/users', ng-click='refreshUserPage()')
          span.fa.fa-users
          span(ng-if='!$root.basicMode') 用户管理

    ul.nav.stf-nav.stf-feedback.pull-right.unselectable(ng-cloak='ng-cloak')
      li.stf-nav-web-native-button(ng-if='!$root.basicMode && isControlRoute')
        .btn-group
          button.btn.btn-sm.btn-default-outline(type='button', ng-model='$root.platform', uib-btn-radio="'web'", translate='translate') Web
          button.btn.btn-sm.btn-default-outline(type='button', ng-model='$root.platform', uib-btn-radio="'native'", translate='translate') Native
      li.stf-user-li(ng-show='!$root.basicMode', ng-mouseover='showUserMenuStatus=true', ng-mouseout='showUserMenuStatus=false')
        a
          i.fa.fa-users
          | {{currentUser.name}}
        div(ng-show='showUserMenuStatus')
          ul
            li.stf-user-menu-li
              a.stf-user-menu-a(ng-href='/#!/password')
                i.fa.fa-key
                |   修改登陆密码
            li.stf-user-menu-li
              a.stf-user-menu-a(ng-href="/auth/mock/#!%2Fdevices")
                i.fa.fa-sign-out
                |   退出登陆
      li(ng-show='!$root.basicMode')
        a(ng-href='/#!/help', accesskey='6')
          i.fa.fa-question-circle.fa-fw
          | {{ "Help" | translate }}
